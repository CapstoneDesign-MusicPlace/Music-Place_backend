{
  "id": null,
  "uid": "spring-boot-13-metrics-dashboard",
  "title": "Spring Boot - Full Performance Dashboard (13 Metrics)",
  "timezone": "browser",
  "schemaVersion": 36,
  "version": 1,
  "refresh": "5s",
  "tags": ["spring", "backend", "monitoring", "production"],
  "time": {
    "from": "now-6h",
    "to": "now"
  },

  "templating": {
    "list": [
      {
        "name": "instance",
        "type": "query",
        "datasource": "prometheus",
        "refresh": 1,
        "query": "label_values(jvm_memory_used_bytes, instance)",
        "multi": true,
        "includeAll": true,
        "allValue": ".*",
        "current": {
          "selected": true,
          "text": "All",
          "value": ".*"
        }
      }
    ]
  },

  "panels": [

    {
      "id": 1,
      "type": "timeseries",
      "title": "Latency (P50 / P90 / P95)",
      "datasource": "prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 0 },
      "targets": [
        {
          "expr": "histogram_quantile(0.50, sum(rate(http_server_requests_seconds_bucket{instance=~\"$instance\"}[5m])) by (le, uri))",
          "legendFormat": "P50 {{uri}}"
        },
        {
          "expr": "histogram_quantile(0.90, sum(rate(http_server_requests_seconds_bucket{instance=~\"$instance\"}[5m])) by (le, uri))",
          "legendFormat": "P90 {{uri}}"
        },
        {
          "expr": "histogram_quantile(0.95, sum(rate(http_server_requests_seconds_bucket{instance=~\"$instance\"}[5m])) by (le, uri))",
          "legendFormat": "P95 {{uri}}"
        }
      ]
    },

    {
      "id": 2,
      "type": "timeseries",
      "title": "Request Throughput (RPS)",
      "datasource": "prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{instance=~\"$instance\"}[1m])) by (uri)",
          "legendFormat": "{{uri}}"
        }
      ]
    },

    {
      "id": 3,
      "type": "timeseries",
      "title": "Error Rate (5xx)",
      "datasource": "prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 24, "y": 0 },
      "targets": [
        {
          "expr": "sum(rate(http_server_requests_seconds_count{status=~\"5..\", instance=~\"$instance\"}[1m])) / sum(rate(http_server_requests_seconds_count{instance=~\"$instance\"}[1m]))",
          "legendFormat": "5xx Error Rate"
        }
      ]
    },

    {
      "id": 4,
      "type": "timeseries",
      "title": "JVM Heap Usage",
      "datasource": "prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 8 },
      "targets": [
        {
          "expr": "sum(jvm_memory_used_bytes{area=\"heap\", instance=~\"$instance\"})",
          "legendFormat": "Heap Used"
        },
        {
          "expr": "sum(jvm_memory_max_bytes{area=\"heap\", instance=~\"$instance\"})",
          "legendFormat": "Heap Max"
        }
      ]
    },

    {
      "id": 5,
      "type": "timeseries",
      "title": "JVM Non-Heap Usage",
      "datasource": "prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 8 },
      "targets": [
        {
          "expr": "sum(jvm_memory_used_bytes{area=\"nonheap\", instance=~\"$instance\"})",
          "legendFormat": "Non-Heap Used"
        },
        {
          "expr": "sum(jvm_memory_max_bytes{area=\"nonheap\", instance=~\"$instance\"})",
          "legendFormat": "Non-Heap Max"
        }
      ]
    },

    {
      "id": 6,
      "type": "timeseries",
      "title": "GC Pause Duration",
      "datasource": "prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 24, "y": 8 },
      "targets": [
        {
          "expr": "rate(jvm_gc_pause_seconds_sum{instance=~\"$instance\"}[5m])",
          "legendFormat": "GC Pause"
        }
      ]
    },

    {
      "id": 7,
      "type": "timeseries",
      "title": "Thread Count",
      "datasource": "prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 16 },
      "targets": [
        {
          "expr": "jvm_threads_live_threads{instance=~\"$instance\"}",
          "legendFormat": "Live Threads"
        },
        {
          "expr": "jvm_threads_daemon_threads{instance=~\"$instance\"}",
          "legendFormat": "Daemon Threads"
        }
      ]
    },

    {
      "id": 8,
      "type": "timeseries",
      "title": "CPU Usage",
      "datasource": "prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 16 },
      "targets": [
        {
          "expr": "system_cpu_usage{instance=~\"$instance\"}",
          "legendFormat": "System CPU"
        },
        {
          "expr": "process_cpu_usage{instance=~\"$instance\"}",
          "legendFormat": "Process CPU"
        }
      ]
    },

    {
      "id": 9,
      "type": "timeseries",
      "title": "Process Uptime",
      "datasource": "prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 24, "y": 16 },
      "targets": [
        {
          "expr": "process_uptime_seconds{instance=~\"$instance\"}",
          "legendFormat": "Uptime"
        }
      ]
    },

    {
      "id": 10,
      "type": "timeseries",
      "title": "HikariCP Connections (Active)",
      "datasource": "prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 0, "y": 24 },
      "targets": [
        {
          "expr": "hikaricp_connections_active{instance=~\"$instance\"}",
          "legendFormat": "Active Connections"
        }
      ]
    },

    {
      "id": 11,
      "type": "timeseries",
      "title": "HikariCP Connections (Idle)",
      "datasource": "prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 12, "y": 24 },
      "targets": [
        {
          "expr": "hikaricp_connections_idle{instance=~\"$instance\"}",
          "legendFormat": "Idle Connections"
        }
      ]
    },

    {
      "id": 12,
      "type": "timeseries",
      "title": "HikariCP Max Pool Size",
      "datasource": "prometheus",
      "gridPos": { "h": 8, "w": 12, "x": 24, "y": 24 },
      "targets": [
        {
          "expr": "hikaricp_connections_max{instance=~\"$instance\"}",
          "legendFormat": "Max Pool Size"
        }
      ]
    },

    {
      "id": 13,
      "type": "timeseries",
      "title": "Datasource Connection Usage",
      "datasource": "prometheus",
      "gridPos": { "h": 8, "w": 24, "x": 0, "y": 32 },
      "targets": [
        {
          "expr": "sum(hikaricp_connections_usage{instance=~\"$instance\"})",
          "legendFormat": "Usage Ratio"
        }
      ]
    }

  ]
}
